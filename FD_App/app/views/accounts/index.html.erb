<p id="notice"><%= notice %></p>

<h1>Listing Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Account number</th>
      <th>User</th>
      <th>Type account</th>
      <th>Tenure in years</th>
      <th>Tenure in months</th>
      <th>Tenure in days</th>
      <th>Maturity proceeds</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.account_number %></td>
        <td><%= account.user_id %></td>
        <td><%= account.type_account %></td>
        <td><%= account.tenure_in_years %></td>
        <td><%= account.tenure_in_months %></td>
        <td><%= account.tenure_in_days %></td>
        <td><%= account.maturity_proceeds %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

