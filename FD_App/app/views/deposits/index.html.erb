<p id="notice"><%= notice %></p>

<h1>Listing Deposits</h1>

<table>
  <thead>
    <tr>
      <th>Account</th>
      <th>User</th>
      <th>Tenure in years</th>
      <th>Tenure in months</th>
      <th>Tenure in days</th>
      <th>Maturity proceeds</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deposits.each do |deposit| %>
      <tr>
        <td><%= deposit.account_id %></td>
        <td><%= deposit.user_id %></td>
        <td><%= deposit.tenure_in_years %></td>
        <td><%= deposit.tenure_in_months %></td>
        <td><%= deposit.tenure_in_days %></td>
        <td><%= deposit.maturity_proceeds %></td>
        <td><%= link_to 'Show', deposit %></td>
        <td><%= link_to 'Edit', edit_deposit_path(deposit) %></td>
        <td><%= link_to 'Destroy', deposit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

